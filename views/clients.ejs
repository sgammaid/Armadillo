<%- include('partials/header') %>
<%- include('partials/navbar') %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-body">
            <h1>Scheda di Consulenza</h1>
  
            <!-- Makes POST request to /register route -->
            <form action="/clients" method="POST">
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Nome</span>
                  </div>
                  <input type="text" class="form-control" name="firstNameCli">
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Cognome</span>
                  </div>
                  <input type="text" class="form-control" name="nameCli">
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Indirizzo</span>
                  </div>
                  <input type="text" class="form-control" name="addrCli">
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Località</span>
                  </div>
                  <input type="text" class="form-control" name="placeCli">
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Contatti</span>
                  </div>
                  <input type="email" class="form-control" name="emailCli" placeholder="E-Mail">
                  <input type="phone" class="form-control" name="phoneCli" placeholder="Nr. Telefono">
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Quantità di persone</span>
                  </div>
                  <input type="text" class="form-control" name="countCli">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Data di viaggio</span>
                  </div>
                  <input type="date" class="form-control" name="dateTripCli">
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Livello Disabilità</span>
                  </div>
                  <select data-placeholder="Livello disabilità" class="select-level-disability" multiple name="levelDisabilityCli">
                    <option value=""></option>
                    <option value="low">Leggera</option>
                    <option value="medium">Media</option>
                    <option value="high">Grave</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Tipologia Disabilità</span>
                  </div>
                  <select data-placeholder="Tipologia disabilità" class="select-type-disability" multiple name="typeDisabilityCli">
                    <option value=""></option>
                    <option value="cognitive">Disturbo cognitivo, difficoltà d'apprendimento</option>
                    <option value="illness">Disabilità dovuta a malattia</option>
                    <option value="psychic">Disabilità psichica</option>
                    <option value="moving">Disabilità motoria</option>
                    <option value="hearing">Disabilità uditiva</option>
                    <option value="seeing">Disabilità visiva</option>
                    <option value="cognitive">Disturbo cognitivo, difficoltà d'apprendimento</option>
                    <option value="speaking">Disturbo dell'eloquio</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Necessità particolari</span>
                  </div>
                  <select data-placeholder="Necessità particolari" class="select-special-needs" multiple name="specialNeedsCli">
                    <option value=""></option>
                    <option value="wc">Necessità alla toilette</option>
                    <option value="braille">Braille</option>
                    <option value="accomp">Accompagnamento</option>
                    <option value="reference">Persona di riferimento</option>
                    <option value="other">Altro</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Necessità particolari (commenti)</span>
                  </div>
                  <textarea class="form-control" aria-label="With textarea" name="specialNeedsOtherCli"></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Destinazione</span>
                  </div>
                  <select data-placeholder="Destinazione" class="select-destination" multiple name="destinationCli">
                    <option value=""></option>
                    <option value="sea">Mare</option>
                    <option value="mountain">Montagna</option>
                    <option value="ch">Svizzera</option>
                    <option value="eu">Europa</option>
                    <option value="other">Altro</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Destinazioni (commenti)</span>
                  </div>
                  <textarea class="form-control" aria-label="With textarea" name="destinationOtherCli"></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Tipologia di struttura</span>
                  </div>
                  <select data-placeholder="Tipologia di struttura" class="select-structure-type" multiple name="structureCli">
                    <option value=""></option>
                    <option value="hotel">Hotel</option>
                    <option value="village">Villaggio</option>
                    <option value="bb">Bed and Breakfast</option>
                    <option value="residence">Residenze</option>
                    <option value="camping">Campeggio</option>
                    <option value="other">Altro</option>
                    <option value="1star">*</option>
                    <option value="2star">**</option>
                    <option value="3star">***</option>
                    <option value="4star">****</option>
                    <option value="5star">*****</option>
                    <option value="breakfast">Solo colazione</option>
                    <option value="halfboard">Mezza pensione</option>
                    <option value="fullboard">Pensione completa</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Struttura (commenti)</span>
                  </div>
                  <textarea class="form-control" aria-label="With textarea" name="structureOtherCli"></textarea>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Tipologia di servizio</span>
                  </div>
                  <select data-placeholder="Tipologia di servizio" class="select-service-type" multiple name="serviceCli">
                    <option value=""></option>
                    <option value="transfer">Transfer</option>
                    <option value="village">Itinerario nella destinazione</option>
                    <option value="bb">Supporto medico nel luogo</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="">Servizio (commenti)</span>
                  </div>
                  <textarea class="form-control" aria-label="With textarea" name="serviceOtherCli"></textarea>
                </div>
              </div>
              <button type="submit" class="btn btn-outline-info" value="Save">Salva Richiesta</button>
              <button type="submit" class="btn btn-outline-info" formaction="clients-str">Trova Strutture</button>
              <button type="submit" class="btn btn-outline-info" formaction="clients-act">Trova Attività</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>
<% for(var j=0; j < structures.length; j++) { %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-8">
          <div id="carouselExampleCaptions<%= j %>" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
              <% for(var i=0; i < structures[j].pictures.length; i++) { %>
                <li data-target="#carouselExampleCaptions<%= j %>" data-slide-to="<%= i %>" <% if (i===0) { %> class="active" <% } %> ></li>
              <% } %>
              </ol>
              <div class="carousel-inner">
                <% for(var i=0; i < structures[j].pictures.length; i++) { %>
                  <div class="carousel-item <% if (i===0) { %> active <% } %>">
                    <img src="<%= structures[j].pictures[i] %>" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                      <h5><%= structures[j].name %></h5>
                      <p><%= structures[j].address + " - " + structures[j].place + " - " + structures[j].country %></p>
                    </div>
                  </div>
              <% } %>
            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleCaptions<%= j %>" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-target="#carouselExampleCaptions<%= j %>" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
              </button>
          </div>
      </div>
    </div>
</div>
<% } %>
