<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8 d-flex align-items-stretch">
      <div class="card">
        <div class="card-body">
          <h1>Cerca Strutture</h1>
          <form action="/form-str" enctype="multipart/form-data" method="POST">
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="">Nome Struttura</span>
                </div>
                <input type="text" class="form-control" name="nameStr">
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="">Località</span>
                </div>
                <input type="text" class="form-control" name="placeAct">
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="">Livello Disabilità</span>
                </div>
                <select data-placeholder="Livello disabilità" class="select-level-disability" multiple name="levelDisabilityStr">
                  <option value=""></option>
                  <option value="low">Leggera</option>
                  <option value="medium">Media</option>
                  <option value="high">Grave</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="">Tipologia Disabilità</span>
                </div>
                <select data-placeholder="Tipologia disabilità" class="select-type-disability" multiple name="typeDisabilityStr">
                  <option value=""></option>
                  <option value="cognitive">Cognitivo</option>
                  <option value="behavior">Comportamentale</option>
                  <option value="physical">Fisica</option>
                </select>
              </div>
            </div>
            <button type="submit" class="btn btn-outline-info">Cerca Strutture</button>
          </form>  
        </div>
      </div>
    </div>  
  </div>
  <% for(var j=0; j < structures.length; j++) { %>
    <div class="container mt-5">
      <div class="row">
        <div class="col-lg-8">
            <div id="carouselExampleCaptions<%= j %>" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                <% for(var i=0; i < structures[j].pictures.length; i++) { %>
                  <li data-target="#carouselExampleCaptions<%= j %>" data-slide-to="<%= i %>" <% if (i===0) { %> class="active" <% } %> ></li>
                <% } %>
                </ol>
                <div class="carousel-inner">
                  <% for(var i=0; i < structures[j].pictures.length; i++) { %>
                    <div class="carousel-item <% if (i===0) { %> active <% } %>">
                      <img src="<%= structures[j].pictures[i] %>" class="d-block w-100" alt="...">
                      <div class="carousel-caption d-none d-md-block">
                        <h5><%= structures[j].name %></h5>
                        <p><%= structures[j].address + " - " + structures[j].place + " - " + structures[j].country %></p>
                      </div>
                    </div>
                <% } %>
              </div>
              <button class="carousel-control-prev" type="button" data-target="#carouselExampleCaptions<%= j %>" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-target="#carouselExampleCaptions<%= j %>" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
                </button>
            </div>
        </div>
      </div>
  </div>
  <% } %>
</div>  

<%- include('partials/footer') %>
